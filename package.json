{
  "name": "react-hipstaplate",
  "version": "0.0.3",
  "description": "Modern ReactJS/express full-stack boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/DashBouquet/react-hipstaplate.git"
  },
  "engines": {
    "node": ">=7.6.0",
    "npm": ">=4"
  },
  "author": "Vitali Shalak",
  "license": "MIT",
  "scripts": {
    "dev": "rm -rfd build && cross-env NODE_ENV=development concurrently \"yarn dev:ts\" \"sleep 2 && yarn dev:next\"",
    "dev:ts": "tsc --watch",
    "dev:next": "node server/index.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "precommit": "yarn run format && git add --all && yarn run lint",
    "lint": "tslint --type-check -c tslint.json -p tsconfig.json '{app,global_typings}/**/*.{ts,tsx}'",
    "format:base": "prettier --write --no-semi --single-quote --trailing-comma es5",
    "format:ts": "yarn run format:base --  --parser typescript '{app,global_typings}/**/*.{ts,tsx}'",
    "format:js": "yarn run format:base -- '{server}/**/*.js' '*.js'",
    "format": "yarn run format:ts && yarn run format:js",
    "graphql:update_schema": "graphql get-schema",
    "graphql:update_types": "apollo-codegen generate **/*.gql --schema schema.json --target typescript --output app/schema.ts",
    "graphql:play": "graphql playground",
    "graphql:see_graph": "graphql voyager"
  },
  "dependencies": {
    "babel-plugin-inline-import-graphql-ast": "^2.0.0",
    "babel-plugin-root-import": "^5.1.0",
    "http": "^0.0.0",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.1.4",
    "next": "^3.2.1",
    "next-routes": "^1.0.40",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-apollo": "^1.4.15",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "recompose": "^0.25.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "styled-components": "^2.1.3-0",
    "typescript-fsa": "^2.5.0",
    "typescript-fsa-reducers": "^0.4.4"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/js-cookie": "^2.1.0",
    "@types/next": "^2.4.2",
    "@types/ramda": "^0.24.9",
    "@types/react": "^16.0.5",
    "@types/react-redux": "^5.0.6",
    "@types/recompose": "^0.24.1",
    "apollo-codegen": "^0.16.5",
    "babel-jest": "^21.0.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "body-parser": "^1.17.2",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "enzyme": "^2.9.1",
    "express": "^4.15.4",
    "file-loader": "^0.11.2",
    "graphql-cli": "^1.0.1",
    "graphql-cli-voyager": "^0.1.2",
    "husky": "^0.14.3",
    "image-webpack-loader": "^3.4.1",
    "jest": "^21.0.1",
    "jest-cli": "^21.0.1",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.6.1",
    "react-test-renderer": "^15.6.1",
    "redux-devtools-extension": "^2.13.2",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.14",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-consistent-codestyle": "^1.6.0",
    "tslint-immutable": "^4.1.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.2",
    "url-loader": "^0.5.9"
  }
}
